{
  "analysis": {
    "analyzer": {
      "phone_number_analyzer": {
        "type": "custom",
        "tokenizer": "keyword",
        "filter": [
          "custom_shingle",
          "whitespace_remove"
        ]
      },
      "case_id_analyzer":{
        "type":"custom",
        "tokenizer":"keyword",
        "filter":[
          "hyphen_remove"
        ]
      }
    },
    "filter": {
      "custom_shingle": {
        "type": "shingle",
        "min_shingle_size": 2,
        "max_shingle_size": 3,
        "output_unigrams": true
      },
      "whitespace_remove": {
        "type": "pattern_replace",
        "pattern": " ",
        "replacement": ""
      },
      "hyphen_remove":{
        "type":"pattern_replace",
        "pattern":"-",
        "replacement":""
      }
    }
  },
  "mapping": {
    "total_fields": {
      "limit": "6000"
    }
  }
}
